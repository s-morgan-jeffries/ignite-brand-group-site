$min-site-width ?= 1100px
$navbar-height ?= 100px

.vertical-centering-container
  display block
  text-align center
  &:before
    content ''
    display inline-block
    height 100%
    vertical-align middle

.vertical-centering-container--site-header
  height $navbar-height

.vertically-centered
  vertical-align middle


.site-header
  background $white
  color $dark-gray
  position fixed
  top 0px
  left 0px
  width 100%
  min-width $min-site-width
  height $navbar-height
  margin 0 auto
  z-index 1000

.site-header__logo
  float left
  padding 0
  margin-left 70px
  @extend .vertical-centering-container, .vertical-centering-container--site-header
  >a
    @extend .vertically-centered

.site-header__nav
  clearfix()

.site-header__nav-links
  float right
  margin-right 70px
  height $navbar-height
  text-transform uppercase
  >li
    @extend .vertical-centering-container, .vertical-centering-container--site-header
    display inline-block
    width auto
    &.site-header__text-link
      margin-right 10px
    &.site-header__sprite-link
      margin-right 2px
    >a
      @extend .vertically-centered
      color $dark-gray